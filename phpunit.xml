<phpunit bootstrap="src/autoload.php">
    <testsuites>
        <testsuite name="noob">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="./log/codeCoverage" charset="UTF-8"
